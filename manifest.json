{
  "manifest_version": 2,
  "name": "bpmn.io",
  "version": "2.1",
  "minimum_chrome_version": "23",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage"
  ],
  "file_handlers" : {
    "text" : {
        "types" : [ "*" ],
        "title" : "File Opener"
    }
  }
}
